{{!< default}}

{{#post}}
<main class="site-main">
    <article class="{{post_class}}">
        {{#match @page.show_title_and_feature_image}}
            <header class="gh-article-header gh-canvas">
                <h1 class="gh-article-title">{{title}}</h1>
                <p class="gh-article-subtitle">Come join us for an event!</p>
                {{> "post-image"}}
            </header>
        {{/match}}

        <section class="gh-canvas" style="margin: 2rem 0;">
            <iframe
                src="https://lu.ma/embed/calendar/cal-7iVMZ4JmmJwQtYl/events?lt=dark"
                style="width: 100%; height: 450px; border: none; border-radius: 0.5rem;"
                allowfullscreen=""
                aria-hidden="false"
                tabindex="0">
            </iframe>
        </section>

        <div class="post-content gh-content gh-canvas">
            {{content}}
        </div>
    </article>
</main>
{{/post}}
